---
/**
 * Página Proyectos - CB Digital
 * 
 * Portafolio completo de proyectos.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import ProjectCard from '@/components/sections/ProjectCard.astro';

// Cargar traducciones
const pagesEs = await import('@/locales/es/pages.json');
const pagesEn = await import('@/locales/en/pages.json');
const commonEs = await import('@/locales/es/common.json');
const commonEn = await import('@/locales/en/common.json');

// Leer cookie del idioma en el servidor
const localeCookie = Astro.cookies.get('innovatac-locale');
const serverLocale = (localeCookie?.value === 'es' || localeCookie?.value === 'en') 
  ? localeCookie.value as 'es' | 'en'
  : 'es';

const currentLocale = serverLocale;
const pages = currentLocale === 'es' ? pagesEs.default : pagesEn.default;
const common = currentLocale === 'es' ? commonEs.default : commonEn.default;

// Proyectos reales
const projects = [
  {
    id: 1,
    title: currentLocale === 'es' ? 'Sistema de Gestión de Pacientes - Nefrología' : 'Patient Management System - Nephrology',
    problem: currentLocale === 'es' 
      ? 'Necesidad de mejorar el seguimiento y gestión de pacientes nefrológicos, incluyendo historiales de tratamientos, evolución clínica y control de medicaciones específicas del área.'
      : 'Need to improve tracking and management of nephrology patients, including treatment histories, clinical evolution, and control of area-specific medications.',
    solution: currentLocale === 'es'
      ? 'Aplicación de escritorio desarrollada a medida mediante un proceso colaborativo que incluyó análisis detallado de necesidades específicas, consultas personalizadas y diseño de funcionalidades adaptadas al flujo de trabajo de la especialidad médica.'
      : 'Custom desktop application developed through a collaborative process that included detailed analysis of specific needs, personalized consultations, and design of functionalities adapted to the medical specialty workflow.',
    impact: currentLocale === 'es'
      ? 'Mejora significativa en el seguimiento de pacientes y tratamientos, optimización de procesos administrativos y mayor eficiencia en la gestión clínica diaria.'
      : 'Significant improvement in patient and treatment tracking, optimization of administrative processes, and greater efficiency in daily clinical management.',
    technologies: ['TypeScript', 'Electron', 'Desktop App'],
  },
];
---

<BaseLayout
  title={`${pages.projects.title} - ${common.site.name}`}
  description={pages.projects.subtitle}
>
  <div class="py-16 bg-light-bg-primary dark:bg-dark-bg-primary">
    <div class="container-custom mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-light-text-primary dark:text-white mb-4">
          {pages.projects.title}
        </h1>
        <p class="text-xl text-light-text-secondary dark:text-[#f5f5f5] max-w-3xl mx-auto">
          {pages.projects.subtitle}
        </p>
      </div>

      {projects.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {projects.map((project) => (
            <ProjectCard
              title={project.title}
              problem={project.problem}
              solution={project.solution}
              impact={project.impact}
              technologies={project.technologies}
            />
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-lg text-light-text-secondary dark:text-[#f5f5f5]">
            {pages.projects.empty}
          </p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>

