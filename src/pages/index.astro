  { key: 'mobile', icon: 'üì±' },
  { key: 'ai', icon: 'ü§ñ' },
  { key: 'consulting', icon: 'üîß' },
];

// Proyectos reales
const projects = [
  {
    id: 1,
    title: currentLocale === 'es' ? 'Programa para gestionar pacientes - Nefrolog√≠a' : 'Patient Management Program - Nephrology',
    problem: currentLocale === 'es' 
      ? 'Necesitaba una forma m√°s f√°cil de llevar el control de sus pacientes y sus tratamientos. Todo estaba en papeles y era dif√≠cil encontrar informaci√≥n cuando la necesitaba.'
